[main]
version = 89.0.0
release_date = 2025-10-18

[release_notes]
# v89.0.0 - Live Test Progress Telemetry
description = Real-time pytest streaming now shows colorized start/finish updates with running pass, fail, and remaining test counters.
changes = Introduced a live progress plugin in tests/conftest.py that tracks collection totals, emits green PASS lines, red FAIL alerts, and keeps a rolling tally of completed versus outstanding tests so long suites never appear stalled.
status = stable

