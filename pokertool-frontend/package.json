{
  "name": "pokertool-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/helper-string-parser": "7.25.9",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "@reduxjs/toolkit": "^1.9.7",
    "@sentry/react": "^10.20.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.61",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.19.0",
    "react-scripts": "5.0.1",
    "recharts": "^3.3.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prestart": "node scripts/ensure-deps.js && node scripts/sync-version.js",
    "prebuild": "node scripts/ensure-deps.js && node scripts/sync-version.js",
    "pretest": "node scripts/ensure-deps.js && node scripts/sync-version.js",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:update": "playwright test --update-snapshots",
    "test:cross-browser": "playwright test tests/cross-browser --reporter=list,html",
    "test:cross-browser:chromium": "playwright test tests/cross-browser --project=chromium-light --project=chromium-dark",
    "test:cross-browser:firefox": "playwright test tests/cross-browser --project=firefox-light --project=firefox-dark",
    "test:cross-browser:webkit": "playwright test tests/cross-browser --project=webkit-light --project=webkit-dark",
    "test:cross-browser:edge": "playwright test tests/cross-browser --project=edge-light --project=edge-dark",
    "analyze": "source-map-explorer 'build/static/js/*.js' --html build/bundle-analysis.html",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "source-map-explorer": "^2.5.3",
    "ts-prune": "^0.10.3"
  }
}
