{
  "name": "pokertool-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/helper-string-parser": "7.27.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@reduxjs/toolkit": "^2.9.2",
    "@sentry/react": "^10.20.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.1.6",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "5.0.1",
    "recharts": "^3.3.0",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0"
  },
  "scripts": {
    "prestart": "node scripts/ensure-deps.js && node scripts/sync-version.js && node scripts/check-dependencies.js",
    "prebuild": "node scripts/ensure-deps.js && node scripts/sync-version.js && node scripts/check-dependencies.js",
    "pretest": "node scripts/ensure-deps.js && node scripts/sync-version.js",
    "check-deps": "node scripts/check-dependencies.js",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:visual": "playwright test",
    "test:visual:ui": "playwright test --ui",
    "test:visual:update": "playwright test --update-snapshots",
    "test:cross-browser": "playwright test tests/cross-browser --reporter=list,html",
    "test:cross-browser:chromium": "playwright test tests/cross-browser --project=chromium-light --project=chromium-dark",
    "test:cross-browser:firefox": "playwright test tests/cross-browser --project=firefox-light --project=firefox-dark",
    "test:cross-browser:webkit": "playwright test tests/cross-browser --project=webkit-light --project=webkit-dark",
    "test:cross-browser:edge": "playwright test tests/cross-browser --project=edge-light --project=edge-dark",
    "test:e2e": "playwright test tests/e2e --reporter=list,html",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:debug": "playwright test tests/e2e --debug",
    "analyze": "source-map-explorer 'build/static/js/*.js' --html build/bundle-analysis.html",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "source-map-explorer": "^2.5.3",
    "ts-prune": "^0.10.3"
  }
}
