{
  "version": "1.0",
  "database": {
    "enabled": true,
    "file": "poker_decisions.db"
  },
  "gui": {
    "enhanced_mode": true,
    "visual_card_selection": true,
    "table_visualization": true,
    "theme": "professional",
    "window_size": {
      "width": 1400,
      "height": 900,
      "min_width": 1200,
      "min_height": 800
    },
    "fonts": {
      "scale": 1.0,
      "family": "Arial"
    },
    "colors": {
      "theme": "dark",
      "accent": "#4a9eff"
    }
  },
  "multi_table": {
    "enabled": true,
    "max_tables": 12,
    "default_layout": "auto_tile",
    "auto_tile": true,
    "auto_focus": true,
    "focus_on_action": true,
    "highlight_active": true,
    "sound_alerts": true,
    "optimal_layouts": {
      "1-4_tables": "TILE_2x2",
      "5-6_tables": "TILE_3x2", 
      "7-9_tables": "TILE_3x3",
      "10+_tables": "TILE_4x3"
    },
    "startup_layout": "auto_optimize",
    "preserve_aspect_ratio": true,
    "table_spacing": 10,
    "screen_margins": [20, 20, 20, 20],
    "hotkeys_enabled": true
  },
  "analysis": {
    "auto_save": true,
    "show_statistics": true,
    "cache_enabled": true
  },
  "features": {
    "enhanced_cards": true,
    "position_hints": true,
    "quick_hands": true
  }
}
